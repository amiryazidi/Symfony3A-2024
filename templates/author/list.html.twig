
<!-- Q6-->
<h1>this table containes  {{authors|length}}</h1>
<table border="1">
        <!-- Q4-->
    {% if authors is defined and authors is not empty %}
    <tr>
        <td>id</td>
        <td>user_name</td>
        <td>image</td>
        <td>email</td>
        <td>nb_books</td>
        <td>Action</td>
    <tr>    
        <!-- Q7-->
        {% set total_books = 0  %}
    <tr  {% for aut in authors %}   >

        {% set total_books = total_books + aut.nb_books  %}
        <td>{{ aut.id }}</td>
        <!-- Q5-->
        <td>{{ aut.username | upper }}</td>
        <td><img src="{{ asset (aut.picture) }}" alt="image" style="width:50px;height:50px;"/></td>
        <td>{{ aut.email }}</td>
        <td>{{ aut.nb_books }}</td>
        <td>
            <a href="{{ path('author_details', {'id': aut.id}) }}">Details</a>
        </td>
    <tr{% endfor%}>
<table>
    {% else %}
    <p> No authors found</p>
    {% endif %}


    <h2>total number of books is {{ total_books }}</h2>